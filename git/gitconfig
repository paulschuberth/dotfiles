[push]
	autoSetupRemote = true
[user]
	name = Paul Schuberth
	email = github@pschuberth.de
[alias]
	clean-branches = !git branch | grep -v -e main -e master -e develop | xargs git branch -D
	clean-all-branches = !git for-each-ref --format '"%(refname:short)"' refs/heads/ | grep -v -e  main -e develop -e master | xargs git branch -D
	dft = difftool
[advice]
	skippedCherryPicks = false

# Settings for Project ACPP
[includeIf "gitdir:~/code/acpp/"]
	path = .gitconfig-acpp-local
	path = .gitconfig-acpp

[includeIf "gitdir:~/code/acpp/backend/"]
	path = .gitconfig-acpp-backend

# Settings for 
[includeIf "gitdir:~/code/personal/"]
	path = .gitconfig-personal
[diff]
	external = difft
	tool = difftastic

[diff "localizablestrings"]
	textconv = "iconv -f utf-16 -t utf-8"

[diff "plist"]
	textconv = plutil -convert xml1 -o -

[difftool]
	prompt = false

[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"

[pager]
	difftool = true
[delta]
	light = false
[rebase]
	autostash = true
[core]
	attributesFile = /Users/schuberth/dotfiles/git/gitattributes
